@model EvansPortfolio_v1.Content.Project

@{
    ViewBag.Title = "Project Details";
}

<div style="margin-top:10px; margin-left:5%">
    <p><a class="btn-floating btn-large waves-effect waves-light teal lighten-3" href="~/Home/Index/#project-section"><i class="fa fa-home" aria-hidden="true"></i></a> Click to Return To Projects</p>
</div>

<div class="jumbotron" style="margin-left:10%; margin-right:10%">
    <h2 class="deep-orange-text" style="font-family: 'Libre Baskerville', serif; font-style:italic">@Html.DisplayFor(model => model.Name) Details</h2>
    <hr />

    <h5 class="flow-text teal-text text-darken-4">@Html.DisplayFor(model => model.Description)</h5>
    <p><a href=@Url.Content(Model.GitLink) target="_blank" class="btn-floating blue-grey darken-1"><i class="fa fa-github" aria-hidden="true"></i></a> Click to go to Project on GitHub</p>

    <div class="row">
    @foreach (var pic in Model.Screenshots)
    {
        <div class="col s12 m6 l4">
            <div class="card small z-depth-5" @*style="height:400px;"*@>
                @*<span class="card-title blue-grey-text text-lighten-2" style="font-weight:bold">@Html.DisplayFor(modelItem => pic.Name)</span>*@
                <div class="card-image" style="max-height:100%">
                    <img @*src=@pic.ImagePath*@ src=@Url.Content(pic.ImagePath) @*src="/Images/Network_TV_Shows/tv_index.jpg"*@ class="materialboxed">
                </div>
                <div class="card-content">
                    <span class="card-title blue-grey-text text-lighten-2" style="font-weight:bold">@Html.DisplayFor(modelItem => pic.Name)</span>

                </div>
            </div>
        </div>
    }
    </div>
</div>


