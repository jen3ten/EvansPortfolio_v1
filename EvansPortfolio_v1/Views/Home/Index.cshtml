<div class="row" id="project-section" style="margin-top:60px">
@foreach (var item in Model)
{
    <div class="col s12 m4">
        <div class="card small">
            <div class="card-image waves-effect waves-block waves-light">
                @*<img class="activator" src="~/Images/Resource_Library/library_index.jpg">*@
                <img class="activator" src=@Url.Content(item.VideoLink) />
            </div>
            <div class="card-content">
                <span class="card-title activator grey-text text-darken-4">@Html.DisplayFor(modelItem => item.Name) @Html.DisplayFor(modelItem => item.ProjectID)<i class="material-icons right">more_vert</i></span>
                @*<p><a href="#">This is a link</a></p>*@
            </div>
            <div class="card-action">
                <a href=@item.HardDrivePath>Project link</a>
                <a href=@Url.Content(item.GitLink) target="_blank">GitHub link</a>
                @Html.ActionLink("More Info", "../Projects/Details", new { id = item.ProjectID })
            </div>
            <div class="card-reveal">
                <p> 
                @{
                    var i = 1;
                }
                @foreach (var feature in item.Features)
                {
                    <span class="chip teal lighten-3">@feature.Name</span>
                    @*if (i < item.Features.Count())
                    {
                        <span> | </span>
                    }
                    i++;*@
                }
                </p>
                <span class="card-title grey-text text-darken-4">@Html.DisplayFor(modelItem => item.Name)<i class="material-icons right">close</i></span>
                <p>@Html.DisplayFor(modelItem => item.Description)</p>
                @*<p>CSS</p>
                <p>HTML</p>
                <p>and lots of other stuff</p>*@
                @*<p><a href="~/First/#">This is a link, go to first page</a></p>*@
            </div>
        </div>
    </div>
}
